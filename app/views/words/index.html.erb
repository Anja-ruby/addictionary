<div>
  <div class='look_up'>look up any word, like :</div>
  <form accept-charset="UTF-8" action="find" method="get">
    <input id="polskie" name="word" type="text"/>
    <input class='btn' type='submit' value='search'>
  </form>
</div>

<%= link_to 'Add new word', new_word_path %>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script>
$(function() {
  $.getJSON("/words", function(data) {
    var tags = $.map(data, function(word){
      return word["polskie"];
    });
    $("#polskie").autocomplete({
      source: tags
    });
  });
});
</script>